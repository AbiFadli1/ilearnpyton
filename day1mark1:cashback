total_belanja = input("masukan total belanja anda: Rp.")
bayar = total_belanja
if total_belanja > 20000: #harga minimum
    print ('kamu dapet cashback')
    #hitung cashback
    cashback = total_belanja * 10/100 #cashback 10%
    bayar = total_belanja - cashback
    print("jadi total belanja anda adalah Rp. %s" % bayar )
    print("jadi kamu hemat Rp.%s" % cashback)
if total_belanja < 20000:
    print ("Maaf belanja anda kurang banyak")
    print("jadi total belanja anda adalah Rp. %s" % total_belanja)
if total_belanja > 50000:
    gratisongkir = total_belanja - 30000
    print ("Kamu mendapatkan gratis ongkir 30rb")
    print ("Jumlah Akhir belanja kamu : Rp.%s" % gratisongkir)

